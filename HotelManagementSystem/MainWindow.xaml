<Window x:Class="HotelManagementSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewmodels="clr-namespace:HotelManagementSystem.ViewModels"
        xmlns:views="clr-namespace:HotelManagementSystem.Views"
        Title="Hotel Management" Height="600" Width="1000">

    <Window.Resources>
        <!-- Aici îi spunem WPF-ului: Când vezi un LoginViewModel, desenează un LoginView -->
        <DataTemplate DataType="{x:Type viewmodels:LoginViewModel}">
            <views:LoginView/>
        </DataTemplate>

        <!-- Vom adăuga aici restul de pagini (AdminViewModel -> AdminView etc.) -->
    </Window.Resources>
    <Grid>
        <!---Acesta este containerul dinamic-->
        <ContentControl Content="{Binding CurrentView}"/>
    </Grid>
</Window>
