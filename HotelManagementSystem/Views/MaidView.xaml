<UserControl x:Class="HotelManagementSystem.Views.MaidView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HotelManagementSystem.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">

    <!-- Folosim Border ca element principal pentru că acesta suportă PADDING -->
    <Border Background="#F5F6FA" Padding="20">
        <StackPanel>

            <!-- Header-ul cu etajul -->
            <Border Background="#2C3E50" CornerRadius="10" Padding="15" Margin="0,0,0,20">
                <Grid>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                        <TextBlock Text="Panou Curățenie - ETAJUL " Foreground="White" FontSize="20" FontWeight="Bold"/>
                        <TextBlock Text="{Binding MyFloor}" Foreground="#1ABC9C" FontSize="20" FontWeight="Bold"/>
                    </StackPanel>
                    
                    <Button Content="Logout" Command="{Binding LogoutCommand}" 
                            HorizontalAlignment="Right" VerticalAlignment="Center"
                            Background="#E74C3C" Foreground="White" Padding="15,5" BorderThickness="0"/>
                </Grid>
            </Border>

            <!-- Matricea de camere -->
            <ItemsControl ItemsSource="{Binding AssignedRooms}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <!-- Afișăm 5 camere pe rând -->
                        <UniformGrid Columns="5"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="8" CornerRadius="8" BorderThickness="2" Height="130">
                            <!-- Logica de culori pentru starea camerei -->
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Status}" Value="Free">
                                            <Setter Property="Background" Value="#27AE60"/>
                                            <Setter Property="BorderBrush" Value="#219150"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Status}" Value="Occupied">
                                            <Setter Property="Background" Value="#E74C3C"/>
                                            <Setter Property="BorderBrush" Value="#C0392B"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Status}" Value="CleaningRequired">
                                            <Setter Property="Background" Value="#F1C40F"/>
                                            <Setter Property="BorderBrush" Value="#F39C12"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Status}" Value="CleaningInProgress">
                                            <Setter Property="Background" Value="#3498DB"/>
                                            <Setter Property="BorderBrush" Value="#2980B9"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                                <StackPanel>
                                    <TextBlock Text="{Binding RoomNumber}" FontSize="18" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding Status}" FontSize="10" Foreground="White" Opacity="0.9" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="START" 
                                                Command="{Binding DataContext.StartCleaningCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}" 
                                                CommandParameter="{Binding}" 
                                                Width="55" Height="25" FontSize="10" Margin="2" Background="White" BorderThickness="0"/>
                                        <Button Content="GATA" 
                                                Command="{Binding DataContext.FinishCleaningCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}" 
                                                CommandParameter="{Binding}" 
                                                Width="55" Height="25" FontSize="10" Margin="2" Background="White" BorderThickness="0"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Border>
</UserControl>