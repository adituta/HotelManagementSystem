<UserControl x:Class="HotelManagementSystem.Views.ClientDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HotelManagementSystem.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#F0F2F5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Content -->
        </Grid.ColumnDefinitions>

        <!-- Sidebar Client -->
        <StackPanel Grid.Column="0" Background="#34495E">
            <TextBlock Text="MENIU CLIENT" Foreground="White" FontSize="18" FontWeight="Bold" Margin="20,30" HorizontalAlignment="Center"/>

            <Button Content="Rezervare Nouă" Command="{Binding ShowMakeReservationCommand}" Style="{StaticResource SidebarButtonStyle}"/>
            <Button Content="Rezervările Mele" Command="{Binding ShowMyReservationsCommand}" Style="{StaticResource SidebarButtonStyle}"/>
            <Button Content="Facilități (Sejur Activ)" Command="{Binding ShowFacilitiesCommand}" Style="{StaticResource SidebarButtonStyle}"/>
            <Button Content="Notificări" Command="{Binding ShowNotificationsCommand}" Style="{StaticResource SidebarButtonStyle}"/>

            <Separator Background="#2C3E50" Margin="10,20"/>
            <Button Content="Logout" Command="{Binding LogoutCommand}" Background="#E74C3C" Foreground="White" Margin="10"/>
        </StackPanel>

        <!-- Zona dinamică pentru sub-pagini -->
        <Grid Grid.Column="1" Margin="20">
            <ContentControl Content="{Binding CurrentClientSection}"/>
        </Grid>
    </Grid>
</UserControl>
