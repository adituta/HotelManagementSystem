<UserControl x:Class="HotelManagementSystem.Views.SpaStaffView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HotelManagementSystem.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">

    <Grid Background="#F4F7F6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="#8E44AD">
            <StackPanel>
                <TextBlock Text="SPA CENTER" Foreground="White" FontSize="22" FontWeight="Bold" Margin="0,40,0,40" HorizontalAlignment="Center"/>

                <Button Content="Programări Azi" Background="#9B59B6" Foreground="White" Height="50" BorderThickness="0" FontSize="16" HorizontalContentAlignment="Left" Padding="20,0"/>
                
                <Separator Background="#A569BD" Margin="20,30,20,10"/>

                <Button Command="{Binding RefreshCommand}" Content="⟳ Actualizează" Background="Transparent" Foreground="#ECF0F1" BorderThickness="1" BorderBrush="#A569BD" Margin="20,10" Height="40"/>
                <Button Command="{Binding LogoutCommand}" Content="Logout" Background="#C0392B" Foreground="White" Height="40" Margin="20,10" BorderThickness="0" FontWeight="SemiBold"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Column="1" Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                <TextBlock Text="Cereri Noi &amp; Confirmate" FontSize="24" FontWeight="SemiBold" Foreground="#2C3E50"/>
                <TextBlock Text="{Binding ActiveCount, StringFormat='({0} noi)'}" FontSize="24" Foreground="#7F8C8D" Margin="10,0,0,0"/>
            </StackPanel>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Appointments}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" Width="280" Margin="0,0,20,20" CornerRadius="8" Padding="15">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="10" Direction="270" ShadowDepth="2" Opacity="0.1" Color="Black"/>
                                </Border.Effect>
                                <StackPanel>
                                    <!-- Header -->
                                    <Grid Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Reservation.User.FullName}" FontWeight="Bold" Foreground="#2C3E50" FontSize="14" TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Text="{Binding StartTime, StringFormat='Ora: \{0:hh\\:mm\}'}" Foreground="#8E44AD" FontSize="13" FontWeight="SemiBold"/>
                                        </StackPanel>
                                        
                                        <!-- Status Badge -->
                                        <Border CornerRadius="4" Padding="8,4">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsConfirmed}" Value="False">
                                                            <Setter Property="Background" Value="#FFF59D"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsConfirmed}" Value="True">
                                                            <Setter Property="Background" Value="#C8E6C9"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock FontWeight="Bold" FontSize="11" Foreground="#555">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsConfirmed}" Value="False">
                                                                <Setter Property="Text" Value="NOU"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsConfirmed}" Value="True">
                                                                <Setter Property="Text" Value="CONFIRMAT"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                    </Grid>

                                    <Separator Background="#ECF0F1" Margin="0,0,0,10"/>

                                    <!-- Content -->
                                    <TextBlock Text="{Binding SpaService.Name}" FontSize="16" FontWeight="SemiBold" Margin="0,5,0,5" TextWrapping="Wrap"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                        <TextBlock Text="Persoane: " Foreground="#7F8C8D"/>
                                        <TextBlock Text="{Binding PersonsCount}" FontWeight="Bold" Foreground="#2C3E50"/>
                                    </StackPanel>

                                    <!-- Action Button -->
                                    <Button Command="{Binding DataContext.AcceptCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                            CommandParameter="{Binding}"
                                            Height="40" 
                                            BorderThickness="0" 
                                            FontWeight="Bold"
                                            Cursor="Hand">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsConfirmed}" Value="False">
                                                        <Setter Property="Background" Value="#27AE60"/>
                                                        <Setter Property="Foreground" Value="White"/>
                                                        <Setter Property="Content" Value="ACCEPTĂ PROGRAMAREA"/>
                                                        <Setter Property="IsEnabled" Value="True"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsConfirmed}" Value="True">
                                                        <Setter Property="Background" Value="#ECF0F1"/>
                                                        <Setter Property="Foreground" Value="#BDC3C7"/>
                                                        <Setter Property="Content" Value="ACCEPTAT"/>
                                                        <Setter Property="IsEnabled" Value="False"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>