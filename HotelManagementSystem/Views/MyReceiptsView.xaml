<UserControl x:Class="HotelManagementSystem.Views.MyReceiptsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Background="White">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Istoric Facturi &amp; Sejururi" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" Foreground="#2C3E50"/>

        <ScrollViewer Grid.Row="1">
            <ItemsControl ItemsSource="{Binding Receipts}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="5" Padding="15" Margin="0,0,0,10" Background="#ECF0F1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Detalii Sejur -->
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{Binding CheckInDate, StringFormat='Sejur: {0:dd MMM yyyy} - {0:dd MMM yyyy}'}" FontWeight="Bold" FontSize="16"/>
                                    <TextBlock Text="{Binding TotalPrice, StringFormat='Total Achitat: {0:N2} RON'}" Foreground="#27AE60" FontSize="14" Margin="0,5,0,0"/>
                                </StackPanel>

                                <!-- Buton Detalii -->
                                <Button Grid.Column="1" Content="Vezi Factura" 
                                        Command="{Binding DataContext.ViewReceiptCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}" 
                                        CommandParameter="{Binding}"
                                        Padding="15,5" Background="#3498DB" Foreground="White" FontWeight="Bold" Cursor="Hand"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        
        <TextBlock Text="Nu aveți facturi disponibile, ele vor apărea după ce administratorul le va aproba." 
                   Visibility="{Binding HasNoReceipts, Converter={StaticResource BooleanToVisibilityConverter}}" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Foreground="#7F8C8D" FontSize="16"/>

    </Grid>
</UserControl>
