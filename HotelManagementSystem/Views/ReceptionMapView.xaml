<UserControl x:Class="HotelManagementSystem.Views.ReceptionMapView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:helpers="clr-namespace:HotelManagementSystem.Helpers"
             Background="#F4F6F7">

    <UserControl.Resources>
        <!-- CONVERTERS -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <helpers:DateBlockedConverter x:Key="DateBlockedConverter"/>

        <!-- STYLE CALENDAR "CUTE" & MODERN -->
        <Style x:Key="BeautifulCalendarStyle" TargetType="Calendar">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="0"/>
            
            <Setter Property="CalendarItemStyle">
                <Setter.Value>
                    <Style TargetType="CalendarItem">
                        <Setter Property="Margin" Value="0,10,0,0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="CalendarItem">
                                    <ControlTemplate.Resources>
                                        <DataTemplate x:Key="{x:Static CalendarItem.DayTitleTemplateResourceKey}">
                                            <TextBlock Foreground="#7F8C8D" FontWeight="Bold" FontSize="11" HorizontalAlignment="Center" Margin="0,5" Text="{Binding}"/>
                                        </DataTemplate>
                                    </ControlTemplate.Resources>
                                    <Grid x:Name="PART_Root">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Border Grid.Row="0" Margin="5">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <Button x:Name="PART_PreviousButton" Grid.Column="0" Content="&lt;" Width="30" Height="25"
                                                        Foreground="#2C3E50" Background="Transparent" BorderThickness="0" Cursor="Hand" FontWeight="Bold"/>
                                                
                                                <!-- FIX: Binding to AncestorType=Calendar to get correct DisplayDate -->
                                                <TextBlock Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15" FontWeight="Bold" Foreground="#2C3E50"
                                                           Text="{Binding DisplayDate, RelativeSource={RelativeSource AncestorType=Calendar}, StringFormat='MMMM yyyy'}"/>
                                                
                                                <Button x:Name="PART_NextButton" Grid.Column="2" Content="&gt;" Width="30" Height="25"
                                                        Foreground="#2C3E50" Background="Transparent" BorderThickness="0" Cursor="Hand" FontWeight="Bold"/>
                                            </Grid>
                                        </Border>
                                        <Grid Grid.Row="1" Margin="5,10,5,5">
                                            <Grid x:Name="PART_MonthView">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                            </Grid>
                                            <Grid x:Name="PART_YearView" Visibility="Hidden">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>
                                            </Grid>
                                        </Grid>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
            
            <Setter Property="CalendarDayButtonStyle">
                <Setter.Value>
                    <Style TargetType="CalendarDayButton">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="FontSize" Value="13"/>
                        <Setter Property="Margin" Value="2"/>
                        <Setter Property="Width" Value="32"/>
                        <Setter Property="Height" Value="32"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="CalendarDayButton">
                                    <Border x:Name="dayBorder" Background="{TemplateBinding Background}" CornerRadius="16">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="dayBorder" Property="Background" Value="#ECF0F1"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="dayBorder" Property="Background" Value="#27AE60"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                        <Trigger Property="IsToday" Value="True">
                                            <Setter TargetName="dayBorder" Property="BorderBrush" Value="#27AE60"/>
                                            <Setter TargetName="dayBorder" Property="BorderThickness" Value="2"/>
                                        </Trigger>
                                        <Trigger Property="IsBlackedOut" Value="True">
                                            <Setter Property="Opacity" Value="0.3"/>
                                            <Setter Property="Cursor" Value="No"/>
                                        </Trigger>
                                        <!-- NOU: DataTrigger pentru a bloca datele direct din Binding, evitând crash-ul de AutomationPeer -->
                                        <DataTrigger Value="True">
                                            <DataTrigger.Binding>
                                                <MultiBinding Converter="{StaticResource DateBlockedConverter}">
                                                    <!-- Data butonului (DataContext-ul este DateTime-ul zilei) -->
                                                    <Binding Path="." />
                                                    <!-- Lista de rezervări din ViewModel -->
                                                    <Binding RelativeSource="{RelativeSource AncestorType=UserControl}" Path="DataContext.RoomFutureReservations"/>
                                                </MultiBinding>
                                            </DataTrigger.Binding>
                                            <Setter Property="IsEnabled" Value="False"/>
                                            <Setter Property="Opacity" Value="0.2"/>
                                            <Setter TargetName="dayBorder" Property="Background" Value="#7F8C8D"/>
                                            <Setter TargetName="dayBorder" Property="BorderBrush" Value="#95A5A6"/>
                                        </DataTrigger>
                                        
                                        <Trigger Property="IsInactive" Value="True">
                                            <Setter Property="Opacity" Value="0.3"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <!-- Harta Camere -->
            <ColumnDefinition Width="380"/>
            <!-- Panou Comenzi -->
        </Grid.ColumnDefinitions>
        
        <!-- PARTEA STÂNGĂ: GRIDUL DE CAMERE -->
        <Border Grid.Column="0" Margin="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Hartă Camere &amp; Disponibilitate" FontSize="22" FontWeight="Bold" Margin="0,0,0,15" Foreground="#2C3E50"/>

                    <!-- Legendă -->
                    <!-- FIX: WrapPanel in loc de StackPanel pentru a evita taierea continutului -->
                    <WrapPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal" Margin="0,0,15,5">
                            <Rectangle Width="15" Height="15" Fill="#27AE60" Margin="0,0,5,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Liber Astăzi" VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,15,5">
                            <Rectangle Width="15" Height="15" Fill="#E74C3C" Margin="0,0,5,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Ocupat Astăzi" VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,15,5">
                            <Rectangle Width="15" Height="15" Fill="#F1C40F" Margin="0,0,5,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Necesită Curățenie" VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,15,5">
                            <Rectangle Width="15" Height="15" Fill="#3498DB" Margin="0,0,5,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Curățenie în Curs" VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Buton Refresh -->
                        <Button Content="⟳ Actualizează" Command="{Binding RefreshCommand}" 
                                Background="Transparent" BorderThickness="0" Foreground="#2980B9" Cursor="Hand" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,0,5"/>
                    </WrapPanel>

                    <ItemsControl ItemsSource="{Binding AllRooms}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="8"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Margin="5" Height="70" 
                                        Command="{Binding DataContext.SelectRoomCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        Cursor="Hand">
                                    <!-- Logica de culori -->
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border x:Name="border" CornerRadius="5" BorderThickness="1" BorderBrush="Gray" Background="White">
                                                            <StackPanel VerticalAlignment="Center">
                                                                <TextBlock Text="{Binding RoomNumber}" FontWeight="Bold" HorizontalAlignment="Center" FontSize="16"/>
                                                                <TextBlock Text="{Binding Type}" FontSize="9" HorizontalAlignment="Center" Foreground="#555"/>
                                                            </StackPanel>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <!-- Trigger pentru culori pe baza Status-ului -->
                                                            <DataTrigger Binding="{Binding Status}" Value="Free">
                                                                <Setter TargetName="border" Property="Background" Value="#2ECC71"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Occupied">
                                                                <Setter TargetName="border" Property="Background" Value="#E74C3C"/>
                                                                <Setter TargetName="border" Property="TextBlock.Foreground" Value="White"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="CleaningRequired">
                                                                <Setter TargetName="border" Property="Background" Value="#F1C40F"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="CleaningInProgress">
                                                                <Setter TargetName="border" Property="Background" Value="#3498DB"/>
                                                                <Setter TargetName="border" Property="TextBlock.Foreground" Value="White"/>
                                                            </DataTrigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>

                                    <!-- Aici facem legătura ca la click să se seteze SelectedRoom în ViewModel -->
                                    <!-- NOTA: Trebuie legat Command-ul in Code Behind sau folosit un RelayCommand direct pe buton in loc de SelectRoomCommand generic -->
                                    <!-- Pentru simplitate, folosim proprietatea IsSelected din ViewModel legata de UI in alt mod, 
                                         dar aici vom folosi click direct pe ViewModel prin CommandParameter -->
                                    <Button.InputBindings>
                                        <MouseBinding Gesture="LeftClick" 
                                                      Command="{Binding DataContext.SetRoomCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}" 
                                                      CommandParameter="{Binding}"/>
                                    </Button.InputBindings>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- PARTEA DREAPTĂ: DETALII ȘI REZERVARE -->
        <Border Grid.Column="1" Background="White" BorderBrush="#DDD" BorderThickness="1,0,0,0" Padding="20">
            <ScrollViewer>
                <StackPanel>
                    <TextBlock Text="Detalii Cameră &amp; Rezervare" FontSize="18" FontWeight="Bold" Margin="0,0,0,20" Foreground="#2C3E50"/>

                    <!-- INFO CAMERA SELECTATĂ -->
                    <Border Background="#ECF0F1" Padding="10" CornerRadius="5" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Cameră Selectată:" Foreground="#7F8C8D" FontSize="12"/>
                            <TextBlock Text="{Binding SelectedRoom.RoomNumber, FallbackValue='Selectați din stânga...'}" 
                                       FontSize="24" FontWeight="Bold" Foreground="#2980B9"/>
                            <TextBlock Text="{Binding SelectedRoom.PricePerNight, StringFormat='Preț: {0} RON/noapte'}" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>

                    <TextBlock Text="Disponibilitate Cameră:" FontWeight="Bold" Margin="0,5"/>
                    <Border Background="#F9F9F9" CornerRadius="8" BorderBrush="#EEE" BorderThickness="1" Padding="10">
                         <Calendar x:Name="RoomCalendar" 
                                   SelectionMode="SingleDate" 
                                   SelectedDate="{Binding CalendarSelectedDate, Mode=TwoWay}"
                                   DisplayDateStart="{x:Static sys:DateTime.Today}"
                                   Style="{StaticResource BeautifulCalendarStyle}"
                                   Margin="0"
                                   Background="Transparent"
                                   BorderThickness="0"/>
                    </Border>
                    
                    <!-- MESAJ DISPONIBILITATE -->
                    <Border Background="{Binding AvailabilityStatusColor}" CornerRadius="5" Padding="10" Margin="0,10">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="{Binding CalendarSelectedDate, StringFormat='{}{0:dd MMM}: '}" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="{Binding AvailabilityStatusMessage}" FontWeight="SemiBold" Foreground="White"/>
                        </StackPanel>
                    </Border>

                    <Separator Margin="0,10"/>

                    <!-- FORMULAR CLIENT -->
                    <TextBlock Text="Date Client:" FontWeight="Bold" Margin="0,10,0,5"/>

                    <CheckBox Content="Client NOU (fără cont)" IsChecked="{Binding IsNewClientMode}" Margin="0,0,0,10"/>

                    <!-- Cazul Client Existent -->
                    <StackPanel Visibility="{Binding IsNewClientMode, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverse}">
                        <TextBlock Text="Caută Client Existent:"/>
                        <ComboBox ItemsSource="{Binding AllClients}" DisplayMemberPath="FullName" SelectedItem="{Binding SelectedClient}" Height="30" Margin="0,2,0,10"/>
                    </StackPanel>

                    <!-- Cazul Client Nou -->
                    <StackPanel Visibility="{Binding IsNewClientMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="Nume Complet Client:" Foreground="#E67E22"/>
                        <TextBox Text="{Binding NewClientFullName}" Height="25" Margin="0,2,0,5"/>
                        <TextBlock Text="Telefon (Va fi și Username):" Foreground="#E67E22"/>
                        <TextBox Text="{Binding NewClientPhone}" Height="25" Margin="0,2,0,10"/>
                    </StackPanel>

                    <!-- PERIOADA REZERVĂRII -->
                    <TextBlock Text="Perioada Dorită:" FontWeight="Bold" Margin="0,10,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="0,0,5,0">
                            <TextBlock Text="Check-In:"/>
                            <DatePicker SelectedDate="{Binding StartDate}"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="5,0,0,0">
                            <TextBlock Text="Check-Out:"/>
                            <DatePicker SelectedDate="{Binding EndDate}"/>
                        </StackPanel>
                    </Grid>

                    <Button Content="REZERVĂ ACUM" 
                            Command="{Binding BookOnSpotCommand}"
                            IsEnabled="{Binding IsRoomSelected}"
                            Height="45" Margin="0,25,0,0"
                            Background="#27AE60" Foreground="White" FontWeight="Bold" FontSize="14">
                    </Button>

                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>