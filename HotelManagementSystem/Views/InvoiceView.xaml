<UserControl x:Class="HotelManagementSystem.Views.InvoiceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="600"
             Background="White">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <Style TargetType="Button" x:Key="FinishButton">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsReadOnly}" Value="True">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="Button" x:Key="ApproveButton">
                <Setter Property="Visibility" Value="Collapsed"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsAdminMode}" Value="True">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <!-- SCENARIUL 2: Sejur Activ / Vizualizare (Content) -->
        <!-- Pus primul, va fi sub mesaj daca mesajul devine vizibil, dar controlam cu Visibility -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" Visibility="{Binding InvoiceContentVisibility}">
            <StackPanel Margin="30">
                <TextBlock Text="FACTURĂ SEJUR" FontSize="26" FontWeight="Bold" Foreground="#34495E" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <!-- (Restul conținutului facturii rămâne neschimbat) -->
                <!-- Detalii Camera -->
                <Border Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,15"  BorderBrush="#BDC3C7" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Cazare" FontWeight="Bold" FontSize="16" Foreground="#2C3E50"/>
                         <!-- Note: Aici am simplificat bindingul pentru exemplu, in realitate lista Rooms poate fi complexa 
                              Dar pentru o factura simpla, afisam Total Cazare.
                         -->
                        <TextBlock Text="{Binding RoomTotal, StringFormat='Total Cazare: {0} RON'}" FontSize="14" Margin="0,5"/>
                    </StackPanel>
                </Border>

                <!-- Restaurant -->
                <Border Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,15" BorderBrush="#BDC3C7" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Restaurant" FontWeight="Bold" FontSize="16" Foreground="#2C3E50"/>
                        <ItemsControl ItemsSource="{Binding FoodItems}" Margin="0,5">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding FoodDetails}"/>
                                        <TextBlock Grid.Column="1" Text="{Binding Cost, StringFormat='{}{0} RON'}" FontWeight="Bold"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <TextBlock Text="{Binding FoodTotal, StringFormat='Total Masă: {0} RON'}" FontWeight="Bold" Margin="0,10,0,0" HorizontalAlignment="Right"/>
                    </StackPanel>
                </Border>

                <!-- SPA -->
                <Border Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,15" BorderBrush="#BDC3C7" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Servicii SPA" FontWeight="Bold" FontSize="16" Foreground="#2C3E50"/>
                        <ItemsControl ItemsSource="{Binding SpaItems}" Margin="0,5">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding SpaService.Name}"/>
                                        <TextBlock Grid.Column="1" Text="{Binding SpaService.PricePerPerson, StringFormat='{}{0} RON'}" FontWeight="Bold"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <TextBlock Text="{Binding SpaTotal, StringFormat='Total SPA: {0} RON'}" FontWeight="Bold" Margin="0,10,0,0" HorizontalAlignment="Right"/>
                    </StackPanel>
                </Border>

                <!-- TOTAL FINAL -->
                <Border Background="#34495E" CornerRadius="8" Padding="15" Margin="0,10">
                    <DockPanel>
                        <TextBlock Text="TOTAL DE PLATĂ:" Foreground="White" FontSize="18" FontWeight="Bold"/>
                        <TextBlock Text="{Binding GrandTotal, StringFormat='{}{0} RON'}" Foreground="White" FontSize="18" FontWeight="Bold" HorizontalAlignment="Right"/>
                    </DockPanel>
                </Border>

                <!-- Review Section -->
                <GroupBox Header="Recenzie &amp; Feedback" Margin="0,20" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Notă (1-5):" Margin="0,5"/>
                        <ComboBox SelectedIndex="{Binding ReviewStars}" IsEnabled="{Binding IsEditable}">
                             <!-- Simple items hack, or bind to a list. -->
                             <ComboBoxItem Content="1 - Slab"/>
                             <ComboBoxItem Content="2 - Mediocru"/>
                             <ComboBoxItem Content="3 - Bun"/>
                             <ComboBoxItem Content="4 - Foarte Bun"/>
                             <ComboBoxItem Content="5 - Excelent"/>
                        </ComboBox>
                        
                        <TextBlock Text="Comentariu:" Margin="0,10,0,0"/>
                        <TextBox Height="60" TextWrapping="Wrap" Text="{Binding ReviewText}" IsReadOnly="{Binding IsReadOnly}"/>
                    </StackPanel>
                </GroupBox>


                <Button Content="FINALIZEAZĂ SEJUR ȘI PLĂTEȘTE" 
                        Command="{Binding FinishStayCommand}"
                        Style="{StaticResource FinishButton}"
                        Background="#27AE60" Foreground="White" FontWeight="Bold" Padding="15" Margin="0,10"/>

                 <Button Content="APROBĂ FACTURA" 
                        Command="{Binding ApproveCommand}"
                        Style="{StaticResource ApproveButton}"
                        Background="#E67E22" Foreground="White" FontWeight="Bold" Padding="15" Margin="0,10"/>


            </StackPanel>
        </ScrollViewer>

         <!-- SCENARIUL 1: Niciun sejur activ (Mesaj) -->
         <!-- Pus la final (on top) -->
        <Grid Visibility="{Binding NoStayMessageVisibility}" Background="White">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Nu aveți cum să faceți checkout." FontSize="20" FontWeight="Bold" Foreground="#E74C3C" HorizontalAlignment="Center" TextAlignment="Center"/>
                <TextBlock Text="Acesta se face doar când aveți un sejur activ." FontSize="16" Foreground="#7F8C8D" HorizontalAlignment="Center" TextAlignment="Center" Margin="0,10"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>