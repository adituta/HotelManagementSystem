<UserControl x:Class="HotelManagementSystem.Views.RegisterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HotelManagementSystem.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#F0F2F5">
        <Border Background="White" Width="350" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="30" CornerRadius="10">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" Color="#CCCCCC" ShadowDepth="2"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Creare Cont Client" FontSize="22" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center" Foreground="#2C3E50"/>

                <TextBlock Text="Nume Complet:"/>
                <TextBox Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}" Margin="0,5" Height="25"/>

                <TextBlock Text="Utilizator:" Margin="0,10,0,0"/>
                <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" Margin="0,5" Height="25"/>

                <TextBlock Text="Parolă:" Margin="0,10,0,0"/>
                <PasswordBox x:Name="PassBox" Margin="0,5" Height="25"/>

                <TextBlock Text="Confirmă Parolă:" Margin="0,10,0,0"/>
                <PasswordBox x:Name="ConfirmPassBox" Margin="0,5" Height="25"/>

                <Button Content="Înregistrare" 
                    Command="{Binding RegisterCommand}" 
                    CommandParameter="{Binding ElementName=PassBox}"
                    Margin="0,25,0,0" Height="35" Background="#3498DB" Foreground="White" FontWeight="Bold" Cursor="Hand"/>

                <Button Content="Anulează / Înapoi la Login" 
                    Command="{Binding BackCommand}" 
                    Background="Transparent" BorderThickness="0" Foreground="Gray" Margin="0,10,0,0" Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
