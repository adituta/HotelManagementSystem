<UserControl x:Class="HotelManagementSystem.Views.RegisterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HotelManagementSystem.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">
    
    <Grid>
        <!-- Gradient Background -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#2C3E50" Offset="0.0"/>
                <GradientStop Color="#4CA1AF" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Register Card -->
        <Border Background="White" CornerRadius="15" Width="420" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" ShadowDepth="10" Opacity="0.3" Color="Black"/>
            </Border.Effect>

            <StackPanel Margin="40">
                <!-- Header -->
                <TextBlock Text="Creare Cont Client" FontSize="26" FontWeight="Bold" Foreground="#2C3E50" HorizontalAlignment="Center" Margin="0,0,0,30"/>

                <!-- Full Name -->
                <TextBlock Text="Nume Complet" Foreground="#34495E" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <Border CornerRadius="8" Background="#F0F2F5" BorderBrush="Transparent" BorderThickness="1" Height="40" Margin="0,0,0,15">
                     <Grid>
                        <TextBox Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}" 
                                 Background="Transparent" BorderThickness="0" 
                                 VerticalContentAlignment="Center" Padding="10" FontSize="14"
                                 Validation.ErrorTemplate="{x:Null}"/>
                    </Grid>
                </Border>
                
                <!-- Username -->
                <TextBlock Text="Utilizator" Foreground="#34495E" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <Border CornerRadius="8" Background="#F0F2F5" BorderBrush="Transparent" BorderThickness="1" Height="40" Margin="0,0,0,15">
                     <Grid>
                        <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
                                 Background="Transparent" BorderThickness="0" 
                                 VerticalContentAlignment="Center" Padding="10" FontSize="14"
                                 Validation.ErrorTemplate="{x:Null}"/>
                    </Grid>
                </Border>

                <!-- Password -->
                <TextBlock Text="Parolă" Foreground="#34495E" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <Border CornerRadius="8" Background="#F0F2F5" BorderBrush="Transparent" BorderThickness="1" Height="40" Margin="0,0,0,15">
                    <Grid>
                        <PasswordBox x:Name="PassBox" 
                                     Background="Transparent" BorderThickness="0" 
                                     VerticalContentAlignment="Center" Padding="10" FontSize="14"/>
                    </Grid>
                </Border>

                <!-- Confirm Password -->
                <TextBlock Text="Confirmă Parolă" Foreground="#34495E" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <Border CornerRadius="8" Background="#F0F2F5" BorderBrush="Transparent" BorderThickness="1" Height="40" Margin="0,0,0,30">
                    <Grid>
                        <PasswordBox x:Name="ConfirmPassBox" 
                                     Background="Transparent" BorderThickness="0" 
                                     VerticalContentAlignment="Center" Padding="10" FontSize="14"/>
                    </Grid>
                </Border>

                <!-- Register Button -->
                <Button Content="Înregistrare" 
                        Command="{Binding RegisterCommand}" 
                        CommandParameter="{Binding ElementName=PassBox}"
                        Height="45" FontSize="16" FontWeight="Bold" Cursor="Hand"
                        Foreground="White">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#27AE60"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" CornerRadius="22" Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#2ECC71"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#219150"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Back to Login Button -->
                <Button Content="Anulează / Înapoi la Login" 
                        Command="{Binding BackCommand}" 
                        Background="Transparent" Foreground="#7F8C8D" BorderThickness="0" 
                        HorizontalAlignment="Center" Margin="0,15,0,0" Cursor="Hand"
                        FontSize="14">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <TextBlock Text="{TemplateBinding Content}" Foreground="{TemplateBinding Foreground}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Foreground" Value="#34495E"/>
                                                <Setter Property="TextDecorations" Value="Underline"/>
                                                <Setter Property="Cursor" Value="Hand"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
